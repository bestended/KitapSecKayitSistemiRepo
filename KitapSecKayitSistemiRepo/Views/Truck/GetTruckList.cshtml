@model IEnumerable<KitapSecKayitSistemiRepo.Models.Truck>

@{
    ViewData["Title"] = "GetTruckList";
}



<div class="container">
    <div class="row">
        @if (TempData["truckError"] != null)
        {

            <div class="alert alert-danger notification text-center">

                @TempData["truckError"]
            </div>

        }

        @if (TempData["truckSuccess"] != null)
        {

            @TempData["truckSuccess"]


        }

        <div class="col-10 offset-1">

            <div class="float-end">
                <a class="btn btn-sm btn-primary p-1 m-1" asp-action="AddTruck" asp-controller="Truck">Add Truck</a>
            </div>

            <table class="table table-hover table-striped table-bordered ">
                <thead class="text-center table-striped table-bordered">
                    <tr>
                        <th>Truck Id</th>
                        <th>Truck Driver</th>
                        <th>Driver Phone</th>
                        <th>Truck Size</th>
                        <th>Licence Number</th>
                        <th>Number Plate</th>
                        <th>Warehouse Id</th>
                    

                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">

                            <td>@item.TruckId</td>
                            <td>@item.TruckDriver</td>
                            <td>@item.DriverPhone</td>
                            <td>@item.TruckSize</td>
                            <td>@item.DrivingLicenceNumber</td>
                            <td>@item.NumberPlate</td>
                            <td>@item.WarehouseId</td>


                            <td>

                                <a class="btn btn-sm btn-warning m-1" asp-controller="Truck" asp-action="Edit" asp-route-id="@item.TruckId">Edit</a>
                                <a class="btn btn-sm btn-danger m-1" asp-controller="Truck" asp-action="Delete" asp-route-id="@item.TruckId">Delete</a>
                            </td>

                        </tr>



                    }


                </tbody>


            </table>

        </div>

    </div>

</div>