@model KitapSecKayitSistemiRepo.Models.Truck

@{
    ViewData["Title"] = "AddTruck";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-4 rounded rounded-3 p-4">
            <h3 class="text-info p-2 m-1 text-center">Add Truck</h3>
            <form method="post" asp-action="AddTruck">
                <div class="form-check">
                    <label asp-for="TruckDriver"></label>
                    <input type="text" asp-for="TruckDriver" class="form-control" placeholder="Enter TruckDriver" />

                </div>

                <div class="form-check">
                    <label asp-for="DriverPhone"></label>
                    <input type="text" asp-for="DriverPhone" class="form-control" placeholder="Enter DriverPhone" />
                </div>
                <div class="form-check">
                    <label asp-for="TruckSize"></label>
                    <input type="number" asp-for="TruckSize" class="form-control" placeholder="Enter Truck Size" />
                </div>
                <div class="form-check">
                    <label asp-for="DrivingLicenceNumber"></label>
                    <input type="text" asp-for="DrivingLicenceNumber" class="form-control" placeholder="Enter DrivingLicenceNumber" />
                </div>
                <div class="form-check">
                    <label asp-for="NumberPlate"></label>
                    <input type="text" asp-for="NumberPlate" class="form-control" placeholder="Enter Number Plate" />
                </div>
            
                <div class="form-group">
                    <label asp-for="WarehouseId" class="control-label"></label>
                    <input asp-for="WarehouseId" class="form-control" />
                    <span asp-validation-for="WarehouseId" class="text-danger"></span>
                </div>

            </form>
        </div>
    </div>
</div>




