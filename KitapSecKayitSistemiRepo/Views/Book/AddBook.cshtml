@model KitapSecKayitSistemiRepo.Models.Books

@{
    ViewData["Title"] = "AddBook";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-4 rounded rounded-3 p-4">
            <h3 class="text-info p-2 m-1 text-center">Add Books</h3>
            <form method="post" asp-action="AddBook">
                <div class="form-check">
                    <label asp-for="BookName"></label>
                    <input type="text" asp-for="BookName" class="form-control" placeholder="Enter name" />

                </div>

              
                <div class="form-check">
                    <label asp-for="Writer"></label>
                    <input type="text" asp-for="Writer" class="form-control" placeholder="Enter writer" />
                </div>

                <div class="form-check">
                    <label asp-for="IsStockState"></label>
                    <input type="checkbox" asp-for="IsStockState" class="form-check-inline" checked="checked" />
                   
                </div>

                <div class="form-check">
                    <label asp-for="Price"></label>
                    <input type="number" asp-for="Price" class="form-control" placeholder="Enter price" />
                </div>
                <div class="form-check">
                    <label asp-for="PageCount"></label>
                    <input type="number" asp-for="PageCount" class="form-control" placeholder="Enter page count" />
                </div>

                <div class="form-group">
                    <label asp-for="TruckId" class="control-label"></label>
                    <input asp-for="TruckId" class="form-control" />
                    <span asp-validation-for="TruckId" class="text-danger"></span>
                </div>
                <div class="form-check">

                    <div class="form-group">
                        <label asp-for="SellerId" class="control-label"></label>
                        <input asp-for="SellerId" class="form-control" />
                        <span asp-validation-for="SellerId" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="submit" class="btn btn-sm btn-primary m-2 p-2 float-end" value="Kaydet" />
                    </div>
                </div>


          

            </form>
        </div>
    </div>
</div>

