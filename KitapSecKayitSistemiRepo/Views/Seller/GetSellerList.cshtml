@model IEnumerable<KitapSecKayitSistemiRepo.Models.Seller>

@{
    ViewData["Title"] = "GetSellerList";
}



<div class="container">
    <div class="row">
        @if (TempData["sellerError"] != null)
        {

            <div class="alert alert-danger notification text-center">

                @TempData["sellerError"]
            </div>

        }

        @if (TempData["sellerSuccess"] != null)
        {

            @TempData["sellerSuccess"]


        }

        <div class="col-10 offset-1">

            <div class="float-end">
                <a class="btn btn-sm btn-primary p-1 m-1" asp-action="AddSeller" asp-controller="Seller">Add Seller</a>
            </div>

            <table class="table table-hover table-striped table-bordered ">
                <thead class="text-center table-striped table-bordered">
                    <tr>
                        <th>Seller Id</th>
                        <th>Name</th>
                        <th>Lastname</th>
                        <th>Phone Number</th>
                        <th>Foundation Date</th>
                        <th>Address</th>
                       
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">

                            <td>@item.SellerId</td>
                            <td>@item.Name</td>
                            <td>@item.LastName</td>                        
                            <td>@item.PhoneNumber</td>
                            <td>@item.FoundationDate</td>
                            <td>@item.Address</td>
                         

                            <td>

                                <a class="btn btn-sm btn-warning m-1" asp-controller="Seller" asp-action="Edit" asp-route-id="@item.SellerId">Edit</a>
                                <a class="btn btn-sm btn-danger m-1" asp-controller="Seller" asp-action="Delete" asp-route-id="@item.SellerId">Delete</a>
                            </td>

                        </tr>



                    }


                </tbody>


            </table>

        </div>

    </div>

</div>